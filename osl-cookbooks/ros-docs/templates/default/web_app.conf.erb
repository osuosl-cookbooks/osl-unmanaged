<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  <% unless @params[:server_aliases].nil? -%>
    <% @params[:server_aliases].each do |a| -%>
  ServerAlias <%= a %>
    <% end -%>
  <% end -%>
  DocumentRoot <%= @params[:docroot] %>

  <Directory <%= @params[:docroot] %>>
    Options FollowSymlinks Indexes
    IndexOptions FancyIndexing
    AllowOverride All
    Order Allow,Deny
    Allow From All
  </Directory>

  CustomLog "<%= @params[:logs_dir] %>/transfer.log" combined
  ErrorLog "<%= @params[:logs_dir] %>/error.log"
</VirtualHost>
