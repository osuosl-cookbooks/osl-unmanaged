server {
  listen 80;
  server_name <%= node['orvsdweb']['static']['server_name'] %>;
  root <%= node['orvsdweb']['static']['root'] %>;

  # Don't log the health check file
  location = <%= node['orvsdweb']['static']['healthcheck'] %> {
    access_log off;
  }

  # Deny access to .htaccess, .git and .svn files/directories
  location ~ /(\.ht|\.git|\.svn) {
      deny all;
  }

  location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
      expires max;
  }

  location = /favicon.ico {
      access_log off;
  }

  location = /robots.txt {
      access_log off;
  }

  access_log <%= node['nginx']['log_dir'] %>/media.access.log;
  error_log <%= node['nginx']['log_dir'] %>/media.error.log warn;
}
