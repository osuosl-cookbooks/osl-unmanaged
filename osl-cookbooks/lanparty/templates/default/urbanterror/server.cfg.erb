// Generated by Chef for <%= node['fqdn'] %>
// Local modifications will be overwritten.

sets " Admin" "<%= node['lanparty']['urbanterror']['admin_name'] %>" 
sets " Email" "<%= node['lanparty']['urbanterror']['admin_email'] %>"
set sv_hostname "<%= node['lanparty']['urbanterror']['sv_hostname'] %>"
set g_motd "Urban Terror, Presented by FrozenSand"
set sv_joinmessage "Welcome to Urban Terror 4.2"

// *************************
// * General Game Settings *
// *************************

// Max clientslots available on the server, using more than 16 is not
// advised. It can cause lag and most maps are not built for it. Going
// over 24 can cause nasty bugs.
set sv_maxclients "<%= node['lanparty']['urbanterror']['sv_maxclients'] %>"

// Max clients that can actually join the game.
// Other clients are forced to spectate. 0=all
set g_maxGameClients "0"

// Amount of private slots. This amount of slots will be reserved for
// players who enter the right privatepassword
set sv_privateClients "0"

// 0 = FreeForAll
// 1 = Last Man Standing
// 3 = TeamDeathMatch
// 4 = Team Survivor
// 5 = Follow the Leader
// 6 = Capture and Hold
// 7 = Capture The Flag
// 8 = Bombmode
set g_gametype "<%= node['lanparty']['urbanterror']['g_gametype'] %>"

// Sets the address for auto-downloading. Auto-download only works on
// ioUrbanTerror-clients, not quake3-clients. The client will try to
// download <sv_dlURL>/q3ut4/mapname.pk3. So if your server is running
// ut4_coolmap and sv_dlURL is set to 'yoursite.com/maps', make sure the
// maps is hosted at http://www.yoursite.com/maps/q3ut4/ut4_coolmap.pk3.
// Leaving this set 'urbanterror.info' will make it use a map mirror with
// the most common maps on it. If you got your own hosting, please us
// that though, to save bandwith.
sets sv_dlURL "urbanterror.info"


// *************
// * Passwords *
// *************

// Password to control the server remotely using rcon.
set rconpassword "<%= node['lanparty']['urbanterror']['rconpassword'] %>"

//password for private slots
set sv_privatePassword ""

//password for the server. Nothing = public
set g_password "<%= node['lanparty']['urbanterror']['g_password'] %>"


// ****************
// * Limits/times *
// ****************

// Time in minutes before map is over, 0=never
set timelimit "<%= node['lanparty']['urbanterror']['timelimit'] %>"

// Amount of points to be scored before map is over, 0=never
set fraglimit "<%= node['lanparty']['urbanterror']['fraglimit'] %>"

// Amount of flagcaps before map is over, 0=never
set capturelimit "<%= node['lanparty']['urbanterror']['capturelimit'] %>"

// Time in seconds before game starts when changed to a new map. Gives
// slower computers time to load before game starts
set g_warmup "<%= node['lanparty']['urbanterror']['g_warmup'] %>"


// **************
// * Respawning *
// **************
//
//(FFA, TDM, CAH, CTF)
//

// Seconds before respawn, ignored when g_waverespawns is 1
set g_respawnDelay "8"

// Seconds before respawn is forced, even when plater did not press fire
set g_forcerespawn "20"

// Use waverespawns, meaning everybody in a team respawns at the same time
set g_waverespawns "0"

// Seconds between blue waverespawns, ignored when g_waverespawns is 0
set g_bluewave "15"

// Seconds between red waverespawns, ignored when g_waverespawns is 0
set g_redwave "15"

// Amount of seconds a spawning players is protected from damage
set g_respawnProtection "2"


// *********
// * Rules *
// *********

// Determines if alive players can see dead players message. 0=living
// players can not see dead players chat 1=living players see only
// team-messages from dead teammembers 2=living players also see normal
// chats from dead players
set g_deadchat "1"

// Enable or disable antiwarp. This option smooths the movement of
// warping players (warping is caused by a crappy connection, for
// instance when torrenting during playing). The warping player will
// experience stutters when this is enabled
set g_antiwarp "1"

// Tolerance of the antiwarp. Higher = more tolerant. 50=default
set g_antiwarptol "50"

// Bitmask that decides which votes are allowed and which not. Check
// http://www.urbanterror.info/support/180-server-cvars/#1.2 to find the
// correct number
set g_gear "0"

// Bitmask that decides which votes are allowed and which not. Check
// http://www.urbanterror.info/support/180-server-cvars/#1.3 to find the
// correct number
set g_allowvote "536871039"

// Time in seconds before someone can call another vote after another
// has failed
set g_failedvotetime "300"

// 1=no haunting of enemies when dead
set g_followstrict "1"

// 1=stops clients from spamming many chatlines
set sv_floodprotect "1"


// *************
// * Matchmode *
// *************

// Matchmode is for matchplay. Features timeouts and ready-commands
set g_matchmode "0"

// Ammount of timeouts that a team can do per map
set g_timeouts "3"

// Length of the timeout
set g_timeoutlength "240"

// Length of a pause. This can only be done by rcon. 0=indefinatly
set g_pauselength "0"


// **********************
// * Team Game Settings *
// **********************

// 0 = no friendlyfire
// 1 = friendlyfire on, kick after too many TK's
// 2 = friendlyfire on, no kicks
set g_friendlyFire "1"

// Amount of TK's before you get kicked when friendlyfire is 1
set g_maxteamkills "3"

// Amount of seconds before TK's are forgotten
set g_teamkillsforgettime "300"

// Force players to autojoin on connect, instead of letting them spec
// untill they join themselves
set g_teamautojoin "0"

// If on, you can't join a team when it has more players then the other
set g_teamForceBalance "1"

// When switching maps, players will stay in their team
set g_maintainTeam "1"

// Name for the red team, nothing = Red Dragons
set g_teamnamered ""

// Name for the red team, nothing = SWAT
set g_teamnameblue ""

// When map is over, play it again with the teams swapped (recommended
// for bombmode). After that, change map. 0=change map immediatly when
// map is over, no swapping of teams
set g_swaproles "0"


// *******************************
// * Game Mode Specific Settings *
// *******************************
//
// Team Survivor/Last Man Standing/Bombmode/
// Follow the Leader Specific Settings 
//

// Number of rounds before map is over, 0=never
set g_maxrounds "0"

// Maximum minutes a round can take
set g_RoundTime "3"

// 0 = teams don't get a point when time is up before everyone is dead.
// 1 = team with most players left gets point
set g_survivorrule "0"

// When map is over and both teams have same amount of points, add
// another round
set g_suddendeath "1"

// Seconds it takes to defuse bomb
set g_bombdefusetime "10"

// Seconds before bomb goes off after planting
set g_bombexplodetime "40"

// Seconds it takes to plant the bomb
set g_bombPlantTime "3"


// **************************************
// * Capture the flag Specific Settings *
// **************************************

// If a flag is dropped, return it after this amount of seconds
set g_flagreturntime "30"

// When both flags are taken, they will explode after this amount of minutes
set g_hotpotato "2"

// When g_matchmode 1, it's the time a sub has to wait before spawning
// when unsubing
set g_ctfUnsubWait "5"


// *********************
// * Advanced settings *
// *********************
//
// Dont change, unless you know what you are doing
//

// 1=check for valid cdkey, this means ioUrbanTerror players will not be
// able to join
set sv_strictauth "0"

// Dont let players load modified pk3-files
set sv_pure "1"

// Maximum traffic per second the server will send per client. 25000 or
// 0 = max
set sv_maxRate "0"

// Time in seconds before player with a interupted connection will be
// kicked
set sv_timeout "180"

// Time in seconds before a non-moving player will be kicked
set g_inactivity "0"


// ******************
// * Master Servers *
// ******************

// Servers the server will report to if 'dedicated' is set to 2. When set
// to 1, it doesn't report.  this one will be set automatically by the
// game-engine, so just leave it blank
set sv_master1 ""
set sv_master2 "master.urbanterror.info"
set sv_master3 "master2.urbanterror.info"
set sv_master4 "master.quake3arena.com"
set sv_master5 ""


// **********************************
// * Authentication System settings *
// **********************************

// Set this to 0 to disable the authentication system. (more information
// on www.urbanterror.info)
set auth_enable "1"

// This sets the minimum notoriety level. allowed to connect to your
// server. 0 allows everyone to join.
set auth_notoriety "0"

// Set this to 1 to prevent clan tag thieves from joining your server.
set auth_tags "1"

// Set this to 1 to block the officially banned cheaters from your
// server. -- in the future
set auth_cheaters "1"

// 0 = no authentication message to everyone when a player connects ; 1
// = message on the top of the screen ; 2 = message in the chat box.
set auth_verbosity "1"

// Set this to 1 to draw the account information in the userinfo of each
// player in the server logs.
set auth_log "1"

// Specify group IDs (separated by a blank) if you want to allow only a
// few groups to connect to the server. Empty ("") means all groups can
// connect.
set auth_groups ""


// ******************
// * Other Settings *
// ******************

// Determines the behaviour of the armbandcolor (also shows on
// playerlist and minimap). 0=player's choice, set with cg_rgb 1=Based
// on teamcolor (red or blue) 2=assigned by server (random)
set g_armbands "1"

// Max ping a client may have when connecting to the server
set sv_maxping "0"

// Min ping a client may have when connecting to the server
set sv_minping "0"

// 0= no chatting at all 1=teamchats only 2= all chats 3= only the
// captains can talk (with g_matchmode 1 and only when both teams are
// ready)
set g_allowchat "2"

// Name of the logfile. Empty ("") means no log. Log will be in the
// q3ut4 folder in windows. Linux uses ~/.q3a/q3ut4
set g_log "games.log"

// Enables/disables direct writing to the log file instead of buffered
set g_logsync "1"

// Log every single hit. Creates very big logs
set g_loghits "0"

// Create new log every now and then, instead of always using the same one
set g_logroll "0"

// Additional logging in seperate qconsole.log file. 1=buffered, 2=synced
set logfile "0"

// Interval in seconds of awarding points for flags in Capture and Hold
// gamemode
set g_cahtime "60"

// ****************
// * Map Rotation *
// ****************
// Name of mapcycle-file, located in q3ut4 directory
set g_mapcycle "mapcycle.txt"

// What map to start with
map "<%= node['lanparty']['urbanterror']['mapcycle'][0] %>"


// **************
// * Anti Cheat *
// **************

// To enable PB, unquote the next line.
// (only works when using Quake 3 Arena, not ioUrbanTerror)
//
//pb_sv_enable

// Keep this disabled, BattlEye is dead
set sv_battleye "0"
