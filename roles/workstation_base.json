{
  "name": "workstation_base",
  "description": "Base Role for OSL Workstations",
  "json_class": "Chef::Role",
  "default_attributes": {
    "authorization": {
      "sudo": {
        "include_sudoers_d": "true",
        "sudoers_defaults": [
          "env_reset",
          "set_home",
          "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\""
        ]
      }
    },
    "ntp": {
      "servers": ["time.osuosl.org"]
    },
    "openssh": {
      "server": {
        "permit_root_login": "yes",
        "x11_forwarding": "yes"
      }
    },
    "postfix": {
      "main": {
        "mydomain": "osuosl.org"
      }
    },
    "resolver": {
      "nameservers": ["140.211.166.130", "140.211.166.131", "216.165.191.54"],
      "search": "workstation.cass.oregonstate.edu osuosl.org osuosl.bak  osuosl.oob"
    }
  },
  "override_attributes": {
    "base": {
      "timezone": "US/Pacific"
    },
    "workstation": {
      "hostlist": [
      ]
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[base::chef_client]",
    "recipe[base]",
    "recipe[osl-postfix]",
    "recipe[workstation::cron_apt]",
    "recipe[workstation::repos]",
    "recipe[resolver::default]",
    "recipe[workstation]",
    "recipe[workstation::packages]",
    "recipe[workstation::xrandr]",
    "recipe[workstation::dsh]",
    "recipe[workstation::printers]",
    "recipe[workstation::pastebin]",
    "recipe[workstation::nodejs]",
    "recipe[osl-docker::workstation]",
    "recipe[osl-docker::compose]",
    "recipe[base::cinc_workstation]",
    "recipe[base::packer]",
    "recipe[workstation::virtualbox]",
    "recipe[workstation::kitchen]",
    "recipe[workstation::vagrant]",
    "recipe[workstation::code_generator]",
    "recipe[base::gitlfs]"
  ],
  "env_run_lists": {
  }
}
