{
    "chef_type": "role",
    "default_attributes": {},
    "description": "Base Openstack role for all openstack nodes to setup certain aspects of the node",
    "env_run_lists": {}, 
    "json_class": "Chef::Role",
    "name": "openstack_base", 
    "override_attributes": {
        "authorization": {
            "sudo": {
                "include_sudoers_d": true
            }
        }
    },  
    "run_list": [
      "recipe[openstack-common]",
      "recipe[openstack-common::logging]",
      "recipe[openstack-common::set_endpoints_by_interface]",
      "recipe[openstack-common::sysctl]"
    ]
}
