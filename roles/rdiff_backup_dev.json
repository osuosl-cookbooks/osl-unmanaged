{
  "env_run_lists": {},
  "run_list": [
    "recipe[rdiff-backup::client]"
  ],
  "chef_type": "role",
  "override_attributes": {},
  "default_attributes": {
    "rdiff-backup": {
      "client": {
        "user": "rdiff-backup-client-dev",
        "jobs": {
          "default": {
            "retention-period": "1W",
            "exclude-dirs": [
              "/etc/cron.d",
              "/var/log/apache",
              "/var/log/nginx"
            ]
          },
          "/etc": {},
          "/home": {},
          "/var": {
            "retention-period": "2D"
          }
        }
      }
    }
  },
  "json_class": "Chef::Role",
  "description": "role for all servers in dev environments to be backed up with rdiff-backup",
  "name": "rdiff_backup_dev"
}
