{
  "name": "rdiff_backup_nfs_homes",
  "description": "Backup role for nfs-homes.osuosl.bak",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "env_run_lists": {},
  "run_list": [
    "role[rdiff_backup]"
  ],
  "default_attributes": {
    "rdiff-backup": {
      "client": {
        "jobs": {
          "default": {
            "destination-dir": "/data/rdiff-backup-nfs-homes"
          },
          "/data/homes": {
            "retention-period": "2D"
          }
        }
      }
    }
  }
}
