{
  "name": "rdiff_backup_drupal",
  "description": "Generic backup role for Drupal project servers",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "env_run_lists": {},
  "run_list": [
    "role[rdiff_backup]"
  ],
  "default_attributes": {
    "rdiff-backup": {
      "client": {
        "jobs": {
          "default": {
            "destination-dir": "/data/rdiff-backup-drupal",
            "retention-period": "3M"
          },
          "/etc": {},
          "/home": {},
          "/var": {}
        }
      }
    }
  }
}
