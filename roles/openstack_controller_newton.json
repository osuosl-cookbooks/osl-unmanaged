{
    "chef_type": "role",
    "default_attributes": {},
    "description": "OpenStack Newton Controller role to setup. Installs and configures a controller node for openstack infra",
    "env_run_lists": {},
    "json_class": "Chef::Role",
    "name": "openstack_controller_newton",
    "override_attributes": {
        "authorization": {
            "sudo": {
                "include_sudoers_d": true
            }
        },
        "osl-openstack": {
          "node_type": "controller"
        }
    },
    "run_list": [
        "recipe[osl-openstack::controller]",
        "role[apache]"
    ]
}
