{
  "name": "workstation",
  "description": "Role for OSL Workstations",
  "json_class": "Chef::Role",
  "default_attributes": {
    "authorization": {
      "sudo": {
        "include_sudoers_d": "true",
        "sudoers_default": ["env_reset", "set_home"],
        "groups": []
      }
    },
    "chef-client": {
      "init_style": "none",
      "cron": {
        "hour": "*",
        "minute": "*/30",
        "use_cron_d": "true",
        "log_file": "/var/log/chef/client.log"
      }
    },
    "ntp": {
      "servers": ["time.osuosl.org"]
    },
    "openssh": {
      "server": {
        "permit_root_login": "no",
        "x11_forwarding": "yes"
      }
    },
    "resolver": {
      "nameservers": ["140.211.166.130", "140.211.166.131", "216.165.191.54"],
      "search": "workstation.osuosl.bak. osuosl.bak. osuosl.org."
    },
    "rvm": {
      "default_ruby": "ruby-1.9.3-p327",
      "global_gems": [
        { "name": "berkshelf"},
        { "name": "chef"},
        { "name": "chefspec"},
        { "name": "foodcritic"},
        { "name": "kitchen-openstack"},
        { "name": "kitchen-vagrant"},
        { "name": "knife-backup"},
        { "name": "knife-env-diff"},
        { "name": "knife-file"},
        { "name": "knife-spork"},
        { "name": "serverspec"},
        { "name": "rspec"}
      ]
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[chef-client::cron]",
    "recipe[chef-client::delete_validation]",
    "recipe[user::data_bag]",
    "recipe[sudo::default]",
    "recipe[resolver::default]",
    "recipe[workstation]",
    "recipe[workstation::sudoers]",
    "recipe[workstation::ldap]",
    "recipe[workstation::network]",
    "recipe[workstation::mounts]",
    "recipe[workstation::repos]",
    "recipe[workstation::timezone]",
    "recipe[workstation::autofs]",
    "recipe[workstation::packages]",
    "recipe[workstation::xrandr]",
    "recipe[ntp::default]",
    "recipe[openssh::default]",
    "recipe[rvm::system]"
  ],
  "env_run_lists": {
  }
}
